<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guse.platform.dao.doudou.SystemCashMapper">

    <resultMap id="SystemCash" type="com.guse.platform.entity.doudou.SystemCash">
        <result property="scId" column="sc_id"/>
        <result property="cityId" column="city_id"/>
        <result property="scMouth" column="sc_mouth"/>
        <result property="scAmount" column="sc_Amount"/>
        <result property="scState" column="sc_state"/>
        <result property="scRemark" column="sc_remark"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Base_Column_List">
	    <![CDATA[
        system_cash.sc_id ,system_cash.city_id ,system_cash.sc_mouth ,system_cash.sc_Amount ,
        system_cash.sc_state ,system_cash.sc_remark ,system_cash.create_time 
	    ]]>
	</sql>
	<!-- 用于分页查询 -->
	<sql id="sql_of_where">
	 	WHERE 1=1 
    	<if test="bParam != null" >	
		 	<if test="bParam.scMouth != null">
	      	 AND sc_mouth like concat(concat('%',#{bParam.scMouth,jdbcType=VARCHAR}),'%') 
		 	</if>
		 	<if test="bParam.scAmount != null">
	      	 AND sc_Amount = #{bParam.scAmount, jdbcType=DOUBLE}
		 	</if>
		 	<if test="bParam.scState != null">
	      	 AND sc_state = #{bParam.scState, jdbcType=INTEGER}
		 	</if>
		 	<if test="bParam.scRemark != null">
	      	  AND city.name like concat(concat('%',#{bParam.scRemark,jdbcType=VARCHAR}),'%') 
		 	</if>
	    </if>   
    </sql>
    <sql id="sql_user_join">
		LEFT JOIN city ON system_cash.city_id = city.id
		LEFT JOIN system_agency ON city.id = system_agency.sa_city_id
    </sql>
    <sql id="sql_user_role">
    	<if test="user != null">
    		<if test="user.roleId == 1 or user.roleId == 11">
    			and 1=1 
    		</if>
    		<if test="user.roleId == 12">
    			and system_agency.sa_user_id = #{user.userId } 
    		</if>
    		<if test="user.roleId != 1 and user.roleId != 11 and user.roleId != 12">
    			and 1=2 
    		</if>
    	</if>
    </sql>
    
    <!-- 通用查询 -->
    <select id="select" parameterType="java.util.Map" resultMap="SystemCash">
        select 
        <include refid="Base_Column_List" />
        from system_cash 
        <include refid="sql_of_where" /> order by create_time desc
    </select>
    
    <!-- 通用分页查询 -->
    <select id="selectPageByParam" parameterType="java.util.Map" resultMap="SystemCash">
        select 
        <include refid="Base_Column_List" />
        from system_cash 
        <include refid="sql_user_join" />
        <include refid="sql_of_where" />
        <include refid="sql_user_role" />
        <if test="pParam != null">
            <if test="pParam.orderByClause != null" > order by ${pParam.orderByClause} </if>
            <if test="pParam.orderByClause == null" >
            		order by sc_id  desc 
            </if>
            <if test="pParam.startIndex != null and pParam.pageSize != null" >
              limit ${pParam.startIndex} , ${pParam.pageSize}
            </if>
        </if>
          <if test="pParam == null">
             order by create_date desc
        </if>
    </select>
    
    <!-- 通用分页查询记录总数 -->
    <select id="countByParam" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from system_cash 
        <include refid="sql_user_join" />
        <include refid="sql_of_where" />
        <include refid="sql_user_role" />
    </select>
    
    
    <insert id="insert" parameterType="com.guse.platform.entity.doudou.SystemCash">
    <![CDATA[
        INSERT INTO system_cash (
	        sc_id  ,
	        city_id  ,
	        sc_mouth  ,
	        sc_Amount  ,
	        sc_state  ,
	        sc_remark  ,
	        create_time 
        ) VALUES (
        	#{scId, jdbcType=INTEGER} ,
        	#{cityId, jdbcType=INTEGER} ,
        	#{scMouth, jdbcType=VARCHAR} ,
        	#{scAmount, jdbcType=DOUBLE} ,
        	#{scState, jdbcType=INTEGER} ,
        	#{scRemark, jdbcType=VARCHAR} ,
        	#{createTime, jdbcType=TIMESTAMP} 
        )
    ]]>
    </insert>
    
    <delete id="deleteById">
    <![CDATA[
        DELETE FROM system_cash WHERE
        sc_id = #{scId} 
    ]]>
    </delete>
    
    <select id="selectById" resultMap="SystemCash">
	    SELECT <include refid="Base_Column_List"/>
	    <![CDATA[
	        FROM system_cash 
	        WHERE 
		        sc_id = #{scId} 
	    ]]>
    </select>
    
    <update id="updateByIdSelective" parameterType="com.guse.platform.entity.doudou.SystemCash">
		UPDATE system_cash
		<set>
		 	<if test="cityId != null">
	      	  city_id = #{cityId, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="scMouth != null">
	      	  sc_mouth = #{scMouth, jdbcType=VARCHAR} ,
		 	</if>
		 	<if test="scAmount != null">
	      	  sc_Amount = #{scAmount, jdbcType=DOUBLE} ,
		 	</if>
		 	<if test="scState != null">
	      	  sc_state = #{scState, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="scRemark != null">
	      	  sc_remark = #{scRemark, jdbcType=VARCHAR} ,
		 	</if>
		 	<if test="createTime != null">
	      	  create_time = #{createTime, jdbcType=TIMESTAMP} ,
		 	</if>
		</set>
		WHERE
	       	sc_id = #{scId} 
    </update>
	
</mapper>

