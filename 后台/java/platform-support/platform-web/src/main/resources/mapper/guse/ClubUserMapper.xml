<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guse.platform.dao.doudou.ClubUserMapper">

    <resultMap id="ClubUser" type="com.guse.platform.entity.doudou.ClubUser">
        <result property="cuId" column="cu_id"/>
        <result property="clubId" column="club_id"/>
        <result property="cuUserId" column="cu_user_id"/>
        <result property="cuType" column="cu_type"/>
        <result property="cuCreateTime" column="cu_create_time"/>
        <result property="cuState" column="cu_state"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Base_Column_List">
	    <![CDATA[
        cu_id ,club_id ,cu_user_id ,cu_type ,cu_create_time ,cu_state 
	    ]]>
	</sql>
	<!-- 用于分页查询 -->
	<sql id="sql_of_where">
	 	WHERE 1=1 
    	<if test="bParam != null" >	
		 	<if test="bParam.clubId != null">
	      	 AND club_id = #{bParam.clubId, jdbcType=INTEGER}
		 	</if>
		 	<if test="bParam.cuUserId != null">
	      	 AND cu_user_id = #{bParam.cuUserId, jdbcType=INTEGER}
		 	</if>
		 	<if test="bParam.cuType != null">
	      	 AND cu_type = #{bParam.cuType, jdbcType=VARCHAR}
		 	</if>
		 	<if test="bParam.cuCreateTime != null">
	      	 AND cu_create_time = #{bParam.cuCreateTime, jdbcType=TIMESTAMP}
		 	</if>
		 	<if test="bParam.cuState != null">
	      	 AND cu_state = #{bParam.cuState, jdbcType=VARCHAR}
		 	</if>
	    </if>   
    </sql>
    
    <!-- 通用查询 -->
    <select id="select" parameterType="java.util.Map" resultMap="ClubUser">
        select 
        <include refid="Base_Column_List" />
        from club_user 
        <include refid="sql_of_where" /> order by create_time desc
    </select>
    
    <!-- 通用分页查询 -->
    <select id="selectPageByParam" parameterType="java.util.Map" resultMap="ClubUser">
        select 
        <include refid="Base_Column_List" />
        from club_user 
        <include refid="sql_of_where" />
        <if test="pParam != null">
            <if test="pParam.orderByClause != null" > order by ${pParam.orderByClause} desc </if>
            <if test="pParam.orderByClause == null" >
            		order by cu_id  desc 
            </if>
            <if test="pParam.startIndex != null and pParam.pageSize != null" >
              limit ${pParam.startIndex} , ${pParam.pageSize}
            </if>
        </if>
          <if test="pParam == null">
             order by create_date desc
        </if>
    </select>
    
    <!-- 通用分页查询记录总数 -->
    <select id="countByParam" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from club_user 
        <include refid="sql_of_where" />
    </select>
    
    
    <insert id="insert" parameterType="com.guse.platform.entity.doudou.ClubUser">
    <![CDATA[
        INSERT INTO club_user (
	        cu_id  ,
	        club_id  ,
	        cu_user_id  ,
	        cu_type  ,
	        cu_create_time  ,
	        cu_state  
        ) VALUES (
        	#{cuId, jdbcType=INTEGER} ,
        	#{clubId, jdbcType=INTEGER} ,
        	#{cuUserId, jdbcType=INTEGER} ,
        	#{cuType, jdbcType=VARCHAR} ,
        	#{cuCreateTime, jdbcType=TIMESTAMP} ,
        	#{cuState, jdbcType=VARCHAR} 
        )
    ]]>
    </insert>
    
    <delete id="deleteById">
    <![CDATA[
        DELETE FROM club_user WHERE
        cu_id = #{cuId} 
    ]]>
    </delete>
    
    <select id="selectById" resultMap="ClubUser">
	    SELECT <include refid="Base_Column_List"/>
	    <![CDATA[
	        FROM club_user 
	        WHERE 
		        cu_id = #{cuId} 
	    ]]>
    </select>
    
    <!-- 获取俱乐部玩家 -->
	<select id="getClubUserBy" resultMap="ClubUser">
		SELECT <include refid="Base_Column_List"/>
	        FROM club_user 
	        where 1=1 
	        <if test="clubId != null">
	      	 	and club_id = #{clubId}
		 	</if>
		 	<if test="userId != null">
	      	 	and cu_user_id = #{userId}
		 	</if>
	        limit 1
	</select>
    
    <update id="updateByIdSelective" parameterType="com.guse.platform.entity.doudou.ClubUser">
		UPDATE club_user
		<set>
		 	<if test="clubId != null">
	      	  club_id = #{clubId, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="cuUserId != null">
	      	  cu_user_id = #{cuUserId, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="cuType != null">
	      	  cu_type = #{cuType, jdbcType=VARCHAR} ,
		 	</if>
		 	<if test="cuCreateTime != null">
	      	  cu_create_time = #{cuCreateTime, jdbcType=TIMESTAMP} ,
		 	</if>
		 	<if test="cuState != null">
	      	  cu_state = #{cuState, jdbcType=VARCHAR} ,
		 	</if>
		</set>
		WHERE
	       	cu_id = #{cuId} 
    </update>
	
</mapper>

