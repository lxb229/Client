<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guse.platform.dao.doudou.SystemPropLogMapper">

    <resultMap id="SystemPropLog" type="com.guse.platform.entity.doudou.SystemPropLog">
        <result property="splId" column="spl_id"/>
        <result property="splAmount" column="spl_amount"/>
        <result property="splOprtuser" column="spl_oprtuser"/>
        <result property="splTime" column="spl_time"/>
        <result property="splContent" column="spl_content"/>
        <result property="splType" column="spl_type"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Base_Column_List">
	    <![CDATA[
        system_prop_log.spl_id ,system_prop_log.spl_amount ,system_prop_log.spl_oprtuser ,system_prop_log.spl_time ,
        system_prop_log.spl_content ,system_prop_log.spl_type ,system_prop_log.create_time 
	    ]]>
	</sql>
	<!-- 用于分页查询 -->
	<sql id="sql_of_where">
	 	WHERE 1=1 
    	<if test="bParam != null" >	
		 	
		 	<if test="bParam.splTime != null">
	      	 AND spl_time = #{bParam.splTime, jdbcType=TIMESTAMP}
		 	</if>
		 	<if test="bParam.splContent != null">
	      	 AND system_users.nick like concat(concat('%',#{bParam.splContent,jdbcType=VARCHAR}),'%') 
		 	</if>
		 	<if test="bParam.splType != null">
	      	 AND spl_type = #{bParam.splType, jdbcType=INTEGER}
		 	</if>
	    </if>   
    </sql>
    
    <!-- 通用查询 -->
    <select id="select" parameterType="java.util.Map" resultMap="SystemPropLog">
        select 
        <include refid="Base_Column_List" />
        from system_prop_log 
        <include refid="sql_of_where" /> order by create_time desc
    </select>
    
    <!-- 通用分页查询 -->
    <select id="selectPageByParam" parameterType="java.util.Map" resultMap="SystemPropLog">
        select 
        <include refid="Base_Column_List" />
        from system_prop_log 
        LEFT JOIN system_users ON system_prop_log.spl_oprtuser = system_users.user_id 
        <include refid="sql_of_where" />
        <if test="pParam != null">
            <if test="pParam.orderByClause != null" > order by ${pParam.orderByClause} </if>
            <if test="pParam.orderByClause == null" >
            		order by spl_id  desc 
            </if>
            <if test="pParam.startIndex != null and pParam.pageSize != null" >
              limit ${pParam.startIndex} , ${pParam.pageSize}
            </if>
        </if>
          <if test="pParam == null">
             order by create_date desc
        </if>
    </select>
    
    <!-- 通用分页查询记录总数 -->
    <select id="countByParam" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from system_prop_log 
        LEFT JOIN system_users ON system_prop_log.spl_oprtuser = system_users.user_id 
        <include refid="sql_of_where" />
    </select>
    
    
    <insert id="insert" parameterType="com.guse.platform.entity.doudou.SystemPropLog">
    <![CDATA[
        INSERT INTO system_prop_log (
	        spl_id  ,
	        spl_amount  ,
	        spl_oprtuser  ,
	        spl_time  ,
	        spl_content  ,
	        spl_type  ,
	        create_time 
        ) VALUES (
        	#{splId, jdbcType=INTEGER} ,
        	#{splAmount, jdbcType=INTEGER} ,
        	#{splOprtuser, jdbcType=INTEGER} ,
        	#{splTime, jdbcType=TIMESTAMP} ,
        	#{splContent, jdbcType=VARCHAR} ,
        	#{splType, jdbcType=INTEGER} ,
        	#{createTime, jdbcType=TIMESTAMP} 
        )
    ]]>
    </insert>
    
    <delete id="deleteById">
    <![CDATA[
        DELETE FROM system_prop_log WHERE
        spl_id = #{splId} 
    ]]>
    </delete>
    
    <select id="selectById" resultMap="SystemPropLog">
	    SELECT <include refid="Base_Column_List"/>
	    <![CDATA[
	        FROM system_prop_log 
	        WHERE 
		        spl_id = #{splId} 
	    ]]>
    </select>
    
    <update id="updateByIdSelective" parameterType="com.guse.platform.entity.doudou.SystemPropLog">
		UPDATE system_prop_log
		<set>
		 	<if test="splAmount != null">
	      	  spl_amount = #{splAmount, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="splOprtuser != null">
	      	  spl_oprtuser = #{splOprtuser, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="splTime != null">
	      	  spl_time = #{splTime, jdbcType=TIMESTAMP} ,
		 	</if>
		 	<if test="splContent != null">
	      	  spl_content = #{splContent, jdbcType=VARCHAR} ,
		 	</if>
		 	<if test="splType != null">
	      	  spl_type = #{splType, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="createTime != null">
	      	  create_time = #{createTime, jdbcType=TIMESTAMP} ,
		 	</if>
		</set>
		WHERE
	       	spl_id = #{splId} 
    </update>
	
</mapper>

