<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"  
	xmlns:cache="http://www.springframework.org/schema/cache"
	xsi:schemaLocation="  
        http://www.springframework.org/schema/beans  
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd  
        http://www.springframework.org/schema/cache  
        http://www.springframework.org/schema/cache/spring-cache-3.1.xsd"
	default-autowire="byName">

	<bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig" />
	<bean id="jedisShardInfo" class="redis.clients.jedis.JedisShardInfo">
		<constructor-arg index="0" value="${redis.ip}" type="String" />
		<constructor-arg index="1" value="${redis.ip}_${redis.port}" type="String" />
		<constructor-arg index="2" value="${redis.port}" type="int" />
		<constructor-arg index="3" value="5000" type="int" />
		<constructor-arg index="4" value="3" type="int" /> <!-- weight -->
		<property name="password" value="${redis.pass}" />
		<property name="connectionTimeout" value="2000" /><!-- 连接超时 -->
		<property name="soTimeout" value="2000" /><!-- 获取数据超时 -->
	</bean>
	<bean id="shardedJedisPool" class="redis.clients.jedis.ShardedJedisPool">
		<constructor-arg index="0" ref="jedisPoolConfig" />
		<constructor-arg index="1">
			<list>
				<ref bean="jedisShardInfo" />
			</list>
		</constructor-arg>
	</bean>
	<bean id="jedisConnectionFactory" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
		<property name="shardInfo" ref="jedisShardInfo" />
		<property name="database" value="5" />
	</bean>

	<bean id="redisTemplate" class="org.springframework.data.redis.core.StringRedisTemplate">
		<property name="connectionFactory" ref="jedisConnectionFactory" />
	</bean>
	
	<bean id="bytesSerialize" class="com.guse.platform.common.utils.serializer.BytesSerialize" />
	
	<bean id="jedisUtils" class="com.guse.platform.common.utils.JedisUtils" />
	
	<!-- MQ 
	<bean id="mqUtil" class="com.guse.platform.common.utils.MQUtil"/>
	-->

</beans>