<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangzhixuan.mapper.CommodityLvMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="CommodityLv" type="com.wangzhixuan.model.CommodityLv">
		<result column="id" property="id" />
		<result column="lv_name" property="lvName" />
		<result column="lv" property="lv" />
		<result column="rank" property="rank" />
		<result column="status" property="status" />
		<result column="user_id" property="userId" />
		<result column="create_time" property="createTime" />
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="Base_Column_List">
	    <![CDATA[
        id, lv_name, lv, rank, status, user_id, create_time 
	    ]]>
	</sql>
	
	<select id="selectCommodityLvPage"  resultMap="CommodityLv">
		SELECT <include refid="Base_Column_List"/> 
		FROM commodity_lv 
		<where>
			status = 0 
			<if test=" lvName != null and lvName != '' ">
	               and lv_name like concat(concat('%',#{lvName}),'%') 
	            </if>
		</where>
		order by rank
    </select>
    
    <select id="getAllLv"  resultMap="CommodityLv">
		SELECT <include refid="Base_Column_List"/> 
		FROM commodity_lv 
		where status = 0 
		order by rank
    </select>

</mapper>
