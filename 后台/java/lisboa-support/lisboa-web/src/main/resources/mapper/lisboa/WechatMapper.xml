<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guse.platform.dao.doudou.WechatMapper">

    <resultMap id="Wechat" type="com.guse.platform.entity.doudou.Wechat">
        <result property="id" column="id"/>
        <result property="wechat" column="wechat"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Base_Column_List">
	    <![CDATA[
        id ,wechat 
	    ]]>
	</sql>
	<!-- 用于分页查询 -->
	<sql id="sql_of_where">
	 	WHERE 1=1 
    	<if test="bParam != null" >	
		 	<if test="bParam.wechat != null">
	      	 AND wechat = #{bParam.wechat, jdbcType=VARCHAR}
		 	</if>
	    </if>   
    </sql>
    
    <!-- 通用查询 -->
    <select id="select" parameterType="java.util.Map" resultMap="Wechat">
        select 
        <include refid="Base_Column_List" />
        from wechat 
        <include refid="sql_of_where" /> order by create_time desc
    </select>
    
    <!-- 通用分页查询 -->
    <select id="selectPageByParam" parameterType="java.util.Map" resultMap="Wechat">
        select 
        <include refid="Base_Column_List" />
        from wechat 
        <include refid="sql_of_where" />
        <if test="pParam != null">
            <if test="pParam.orderByClause != null" > order by ${pParam.orderByClause} </if>
            <if test="pParam.orderByClause == null" >
            		order by id  desc 
            </if>
            <if test="pParam.startIndex != null and pParam.pageSize != null" >
              limit ${pParam.startIndex} , ${pParam.pageSize}
            </if>
        </if>
          <if test="pParam == null">
             order by create_date desc
        </if>
    </select>
    
    <!-- 通用分页查询记录总数 -->
    <select id="countByParam" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from wechat 
        <include refid="sql_of_where" />
    </select>
    
    
    <insert id="insert" parameterType="com.guse.platform.entity.doudou.Wechat">
    <![CDATA[
        INSERT INTO wechat (
	        id  ,
	        wechat  
        ) VALUES (
        	#{id, jdbcType=INTEGER} ,
        	#{wechat, jdbcType=VARCHAR} 
        )
    ]]>
    </insert>
    
    <delete id="deleteById">
    <![CDATA[
        DELETE FROM wechat WHERE
        id = #{id} 
    ]]>
    </delete>
    
    <select id="selectById" resultMap="Wechat">
	    SELECT <include refid="Base_Column_List"/>
	    <![CDATA[
	        FROM wechat 
	        WHERE 
		        id = #{id} 
	    ]]>
    </select>
    
    <update id="updateByIdSelective" parameterType="com.guse.platform.entity.doudou.Wechat">
		UPDATE wechat
		<set>
		 	<if test="wechat != null">
	      	  wechat = #{wechat, jdbcType=VARCHAR} ,
		 	</if>
		</set>
		WHERE
	       	id = #{id} 
    </update>
	
</mapper>

