<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guse.platform.dao.doudou.SystemProfitMapper">

    <resultMap id="SystemProfit" type="com.guse.platform.entity.doudou.SystemProfit">
        <result property="id" column="id"/>
        <result property="profit" column="profit"/>
        <result property="minPercentum" column="min_percentum"/>
        <result property="maxPercentum" column="max_percentum"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Base_Column_List">
	    <![CDATA[
        id ,profit ,min_percentum ,max_percentum ,update_time 
	    ]]>
	</sql>
	<!-- 用于分页查询 -->
	<sql id="sql_of_where">
	 	WHERE 1=1 
    	<if test="bParam != null" >	
		 	<if test="bParam.profit != null">
	      	 AND profit = #{bParam.profit, jdbcType=Integer}
		 	</if>
		 	<if test="bParam.minPercentum != null">
	      	 AND min_percentum = #{bParam.minPercentum, jdbcType=INTEGER}
		 	</if>
		 	<if test="bParam.maxPercentum != null">
	      	 AND max_percentum = #{bParam.maxPercentum, jdbcType=INTEGER}
		 	</if>
		 	<if test="bParam.updateTime != null">
	      	 AND update_time = #{bParam.updateTime, jdbcType=TIMESTAMP}
		 	</if>
	    </if>   
    </sql>
    
    <!-- 通用查询 -->
    <select id="select" parameterType="java.util.Map" resultMap="SystemProfit">
        select 
        <include refid="Base_Column_List" />
        from system_profit 
        <include refid="sql_of_where" /> order by create_time desc
    </select>
    
    <!-- 通用分页查询 -->
    <select id="selectPageByParam" parameterType="java.util.Map" resultMap="SystemProfit">
        select 
        <include refid="Base_Column_List" />
        from system_profit 
        <include refid="sql_of_where" />
        <if test="pParam != null">
            <if test="pParam.orderByClause != null" > order by ${pParam.orderByClause} </if>
            <if test="pParam.orderByClause == null" >
            		order by id  desc 
            </if>
            <if test="pParam.startIndex != null and pParam.pageSize != null" >
              limit ${pParam.startIndex} , ${pParam.pageSize}
            </if>
        </if>
          <if test="pParam == null">
             order by create_date desc
        </if>
    </select>
    
    <!-- 通用分页查询记录总数 -->
    <select id="countByParam" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from system_profit 
        <include refid="sql_of_where" />
    </select>
    
    
    <insert id="insert" parameterType="com.guse.platform.entity.doudou.SystemProfit">
    <![CDATA[
        INSERT INTO system_profit (
	        id  ,
	        profit  ,
	        min_percentum  ,
	        max_percentum  ,
	        update_time  
        ) VALUES (
        	#{id, jdbcType=INTEGER} ,
        	#{profit, jdbcType=Integer} ,
        	#{minPercentum, jdbcType=INTEGER} ,
        	#{maxPercentum, jdbcType=INTEGER} ,
        	#{updateTime, jdbcType=TIMESTAMP} 
        )
    ]]>
    </insert>
    
    <delete id="deleteById">
    <![CDATA[
        DELETE FROM system_profit WHERE
        id = #{id} 
    ]]>
    </delete>
    
    <select id="selectById" resultMap="SystemProfit">
	    SELECT <include refid="Base_Column_List"/>
	    <![CDATA[
	        FROM system_profit 
	        WHERE 
		        id = #{id} 
	    ]]>
    </select>
    
    <update id="updateByIdSelective" parameterType="com.guse.platform.entity.doudou.SystemProfit">
		UPDATE system_profit
		<set>
		 	<if test="profit != null">
	      	  profit = #{profit, jdbcType=Integer} ,
		 	</if>
		 	<if test="minPercentum != null">
	      	  min_percentum = #{minPercentum, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="maxPercentum != null">
	      	  max_percentum = #{maxPercentum, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="updateTime != null">
	      	  update_time = #{updateTime, jdbcType=TIMESTAMP} ,
		 	</if>
		</set>
		WHERE
	       	id = #{id} 
    </update>
	
</mapper>

