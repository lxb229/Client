<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guse.platform.dao.doudou.ExchangeMapper">

    <resultMap id="Exchange" type="com.guse.platform.entity.doudou.Exchange">
        <result property="id" column="id"/>
        <result property="rmb2goldMoney" column="rmb2goldMoney"/>
        <result property="goldMoney2Rmb" column="goldMoney2Rmb"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Base_Column_List">
	    <![CDATA[
        id ,rmb2goldMoney ,goldMoney2Rmb 
	    ]]>
	</sql>
	<!-- 用于分页查询 -->
	<sql id="sql_of_where">
	 	WHERE 1=1 
    	<if test="bParam != null" >	
		 	<if test="bParam.rmb2goldMoney != null">
	      	 AND rmb2goldMoney = #{bParam.rmb2goldMoney, jdbcType=INTEGER}
		 	</if>
		 	<if test="bParam.goldMoney2Rmb != null">
	      	 AND goldMoney2Rmb = #{bParam.goldMoney2Rmb, jdbcType=INTEGER}
		 	</if>
	    </if>   
    </sql>
    
    <!-- 通用查询 -->
    <select id="select" parameterType="java.util.Map" resultMap="Exchange">
        select 
        <include refid="Base_Column_List" />
        from exchange 
        <include refid="sql_of_where" /> order by create_time desc
    </select>
    
    <!-- 通用分页查询 -->
    <select id="selectPageByParam" parameterType="java.util.Map" resultMap="Exchange">
        select 
        <include refid="Base_Column_List" />
        from exchange 
        <include refid="sql_of_where" />
        <if test="pParam != null">
            <if test="pParam.orderByClause != null" > order by ${pParam.orderByClause} </if>
            <if test="pParam.orderByClause == null" >
            		order by id  desc 
            </if>
            <if test="pParam.startIndex != null and pParam.pageSize != null" >
              limit ${pParam.startIndex} , ${pParam.pageSize}
            </if>
        </if>
          <if test="pParam == null">
             order by create_date desc
        </if>
    </select>
    
    <!-- 通用分页查询记录总数 -->
    <select id="countByParam" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from exchange 
        <include refid="sql_of_where" />
    </select>
    
    
    <insert id="insert" parameterType="com.guse.platform.entity.doudou.Exchange">
    <![CDATA[
        INSERT INTO exchange (
	        id  ,
	        rmb2goldMoney  ,
	        goldMoney2Rmb  
        ) VALUES (
        	#{id, jdbcType=INTEGER} ,
        	#{rmb2goldMoney, jdbcType=INTEGER} ,
        	#{goldMoney2Rmb, jdbcType=INTEGER} 
        )
    ]]>
    </insert>
    
    <delete id="deleteById">
    <![CDATA[
        DELETE FROM exchange WHERE
        id = #{id} 
    ]]>
    </delete>
    
    <select id="selectById" resultMap="Exchange">
	    SELECT <include refid="Base_Column_List"/>
	    <![CDATA[
	        FROM exchange 
	        WHERE 
		        id = #{id} 
	    ]]>
    </select>
    
    <update id="updateByIdSelective" parameterType="com.guse.platform.entity.doudou.Exchange">
		UPDATE exchange
		<set>
		 	<if test="rmb2goldMoney != null">
	      	  rmb2goldMoney = #{rmb2goldMoney, jdbcType=INTEGER} ,
		 	</if>
		 	<if test="goldMoney2Rmb != null">
	      	  goldMoney2Rmb = #{goldMoney2Rmb, jdbcType=INTEGER} ,
		 	</if>
		</set>
		WHERE
	       	id = #{id} 
    </update>
	
</mapper>

